<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/homenavbar.ejs') %>

<body>

    <div class="container">

        <% result.articles.rows.forEach(article => { %>
            <br>
            <div class="card">
                <div class="card-header">
                    <h2>
                        <%= article.title %>
                    </h2>
                </div>
                <div class="card-body">

                    <a href="/<%= article.slug %> " class="btn btn-success">Ler Artigo</a>

                </div>

            </div>
            
        <% }) %>

        <div class="row">
            <div class="col col-12">
                <br>
                <% if (result.page > 2) { %>
                    <a class="btn btn-dark" style="float: left" href="/articles/page/<%= result.page - 1 %> "> <<< prev</a>
                <% } else if(result.page == 2){ %>
                    <a class="btn btn-dark"  style="float: left" href="/ "> <<< prev</a>
                <% } %> 

                


                <% if (result.next) { %>
                    <a class="btn btn-dark"  style="float: right" href="/articles/page/<%= result.page + 1 %> ">Next  >>></a>
                <% } %>
            </div>
        </div>
        <hr>

    </div>

</body>

<%- include ('../../partials/footer.ejs') %>